# RedForge API Gateway Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE=your-service-role-key

# Stripe Configuration (CRITICAL for webhook functionality)
STRIPE_SECRET=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_endpoint_secret

# Email Configuration (for sending API keys)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=dev@solvas.ai

# ConvertKit Integration (optional)
KIT_API_KEY=your-convertkit-api-key

# Server Configuration
PORT=8000

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn

# Development vs Production
ENVIRONMENT=production